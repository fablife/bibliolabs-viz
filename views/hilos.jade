    //begin of links 

    a(href="http://wiki.bibliolabs.cc/bibliolabs:grupos-interes:narrativas-hipermedia:experimento-narrativa:audiovisual:descripcion-audiovisual" target="_blank" class="link" id="link-memory") 

    a(href="http://wiki.bibliolabs.cc/bibliolabs:grupos-interes:narrativas-hipermedia:experimento-narrativa:sonoro:descripcion-sonoro " target="_blank" class="link" id="link-audio") 

