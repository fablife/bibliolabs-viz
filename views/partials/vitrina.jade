div.content
  div( ng-controller="CarouselIniciativasCtrl")
    div
      carousel.content( interval="myInterval")
        div.carousel_title
          h1.top.centered Descubre las iniciativas de nuestras bibliotecas!
        slide(ng-repeat="iniciativa in root.destacados" active="iniciativa.active")
          img(ng-src="{{iniciativa['Medio principal'].contenido}}" style="margin:auto;")
          div.carousel-caption
            h4 {{iniciativa['Titulo iniciativa'].contenido}}
            //p  {{iniciativa['Descripción breve'].contenido}}

  div.area_filtros.panel.panel-info
    div.panel-body
      div.col-md-3
        h4.right.inline Filtrar 
          a.inline.small_text(ng-show="root.filter_active" ng-click="reset_filters()") Limpiar filtros 
      div.col-md-3
        div.btn-group(dropdown)
          button(type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown") Por Biblioteca 
            span.caret
          ul.dropdown-menu(role="menu")
           li(ng-repeat="bib in root.bibliotecas") 
            a(ng-click="filter('Biblioteca', bib)") {{bib}}
        div.filter-label.label-success(ng-show="root.filter_items['Biblioteca']") {{root.filter_items['Biblioteca']}}
          button.close(ng-click="reset_filter('Biblioteca')", type="button", data-dismiss="alert")
            span(aria-hidden="true") &times;
            span.sr-only Close

      div.col-md-3
        div.btn-group(dropdown)
          button(type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown") Por Público 
            span.caret
          ul.dropdown-menu(role="menu")
            li(ng-repeat="pub in root.publicos") 
              a(ng-click="filter('Publicos', pub)") {{pub}}
        div.filter-label.label-success(ng-show="root.filter_items['Publicos']") {{root.filter_items['Publicos']}}
          button.close(ng-click="reset_filter('Publicos')", type="button", data-dismiss="alert")
            span(aria-hidden="true") &times;
            span.sr-only Close

      div.col-md-3
        div.btn-group(dropdown)
          button(type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown") Por Categoría 
            span.caret
          ul.dropdown-menu(role="menu")
            li(ng-repeat="cat in root.categorias") 
              a(ng-click="filter('Categoría iniciativas', cat)") {{cat}}
        div.filter-label.label-success(ng-show="root.filter_items['Categoría iniciativas']") {{root.filter_items['Categoría iniciativas']}}
          button.close(ng-click="reset_filter('Categoría iniciativas')", type="button", data-dismiss="alert")
            span(aria-hidden="true") &times;
            span.sr-only Close

  div#lista_iniciativas.row(when-scrolled="loadMore()")
    div.col-md-12.col-xs-12(ng-show="root.no_results") 
      div.alert.alert-warning.centered(role="alert") No hay iniciativas que corresponden a tu selección de filtros!

    div.col-md-3.col-xs-12(ng-repeat="iniciativa in root.iniciativas | filter:root.iniciativas.search")
      div.flip-container(ontouchstart="this.classList.toggle('hover');")
        div.flipper
          div.front_content
           div.initiative
            div.item_title {{iniciativa['Titulo iniciativa'].contenido }}
            div.thumbnail(ng-click="show_detail(iniciativa)")
              img(src="{{iniciativa['Portada'].contenido}}" alt="{{iniciativa.nombre}}")
            div.actions
              div.biblioteca
                span.left {{iniciativa['Biblioteca'].contenido }}
              div.publico
                span.left {{iniciativa['Publicos'].contenido }}
              div.categoria
                span.left {{iniciativa['Categoría iniciativas'].contenido }}
                //span.right {{iniciativa['Categoria'].contenido }}
              //-span.glyphicon.glyphicon-comment.left
              //-span.glyphicon.glyphicon-thumbs-up.right
          div.back_content(ng-click="show_detail(iniciativa)")
              //p helloopooooooooooooooooooo
              p {{iniciativa['Descripción breve'].contenido }}

