div.detail
    script(type="text/ng-template" id="iniciativa_dialog")
        div.modal-header
            h3.modal-title I'm a modal!
        div.modal-body
          h1 Mi iniciativa!
        div.modal-footer
            button.btn.btn-primary( ng-click="ok()">OK)
            button.btn.btn-warning( ng-click="cancel()")

