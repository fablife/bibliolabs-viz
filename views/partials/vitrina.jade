div.content
  div( ng-controller="CarouselIniciativasCtrl")
    div
      carousel.content( interval="myInterval")
        div.carousel_title
          h1.top.centered Descubre las iniciativas de nuestras bibliotecas!
        slide(ng-repeat="iniciativa in root.destacados" active="iniciativa.active")
          img(ng-src="{{iniciativa.diapositiva}}" style="margin:auto;")
          div.carousel-caption
            h4 {{iniciativa.nombre}}
            p {{iniciativa.descripcion}}

  div.area_filtros.panel.panel-info
    div.panel-body
      div.col-md-3
        div.subtitle.right Filtrar
      div.col-md-3
        div.btn-group(dropdown)
          button(type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown") Por Biblioteca 
            span.caret
          ul.dropdown-menu(role="menu")
           li(ng-repeat="bib in root.bibliotecas")
             a(href="#") {{bib}}
      div.col-md-3
        div.btn-group
          button(type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown") Por Público 
            span.caret
          ul.dropdown-menu(role="menu")
            li
              a(href="#")
      div.col-md-3
        div.btn-group
          button(type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown") Por Categoría 
            span.caret
          ul.dropdown-menu(role="menu")
            li
              a(href="#")

  div#lista_iniciativas.row(when-scrolled="loadMore()")
    div.col-md-3.col-xs-12(ng-repeat="iniciativa in root.iniciativas | filter:root.iniciativas.search")
      div.flip-container(ontouchstart="this.classList.toggle('hover');")
        div.flipper
          div.front_content
           div.initiative
            div.item_title {{iniciativa['Titulo iniciativa'].contenido }}
            div.thumbnail(ng-click="show_detail(iniciativa)")
              img(src="{{iniciativa.portada}}" alt="{{iniciativa.nombre}}")
            div.actions
              div.biblioteca
                span.left {{iniciativa['Biblioteca'].contenido }}
              div.publico
                span.left {{iniciativa['Publicos'].contenido }}
                //span.right {{iniciativa['Categoria'].contenido }}
              //-span.glyphicon.glyphicon-comment.left
              //-span.glyphicon.glyphicon-thumbs-up.right
          div.back_content
              p helloopooooooooooooooooooo
