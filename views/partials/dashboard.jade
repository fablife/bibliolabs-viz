div.content
  h1.top.centered Actividad reciente en bibliolabs
  div.row
    div.col-xs-6
      h2.top Radio bibliolabs en vivo:
      audio(controls, autoplay="autoplay")
        source(src="http://radio.bibliolabs.cc:8000/emisora.mp3", type="audio/mp3") 
      div(ng-bind="airtime")
      div(ng-show="no_show")
        //p La radio no está transmitiendo al momento.

    div.col-md-6
      div.dashboard-wrapper
        div.dashboard-content
          h2.top.inline
            a(href="http://wiki.bibliolabs.cc", style="margin-left: 5px") Wiki 
          div.item(ng-repeat="item in root.wiki.item")
            div.item-title(ng-click="set_item_content_visible(item)") 
              div.item-title-content{{item.title}} 
              div.glyphaction.glyphicon.glyphicon-eye-open(aria-hidden="true")
            div.item-date
              label.item-label Fecha publicación
              {{item.pubDate}}
            div.item-content(ng-show="item.content_visible")
              div.item-author
                label.item-label Autor
                {{item.author}}
              div.item-link
                label.item-label Enlace 
                a(href="{{item.link}}") Abrir 
              div.item-description
                label.item-label Descripción
                {{item.description}}
              div.item-category
                label.item-label Categoría
                {{item.category}}


  div.row
    div.col-xs-6
      h2.top bibliolabs correos
      div.dashboard-wrapper
        div.dashboard-content
          h4.top.inline
            //a Últimos correos de la lista
          div.item(ng-repeat="item in root.sympa.item") 
            div.item-title
              div.item-title-content{{item.title}} 
            div.item-date
              label.item-label Fecha publicación
              {{item.pubDate}}
            div.item-link
              a(href="{{item.link}}") Leer correo 

    div.col-md-6.dashboard-wrapper
      div.dashboard-content
        h2.top.inline
          a(href="http://wiki.bibliolabs.cc", style="margin-left: 5px") Mediagoblin 
        div.item(ng-repeat="item in root.mg.entry")
          div.item-title(ng-click="set_item_content_visible(item)") 
            div.item-title-content{{item.title.__text}} 
            div.glyphaction.glyphicon.glyphicon-eye-open(aria-hidden="true")
          div.item-date
            label.item-label Fecha publicación
            {{item.updated}}
          div.item-content(ng-show="item.content_visible")
            div.item-author
              label.item-label Autor
              {{item.author.name}}
            div.item-link
              label.item-label Enlace 
              a(href="{{item.link._href}}") Abrir 
